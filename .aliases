#! /bin/bash

alias nn=ncmpcpp
alias feed=newsboat
alias ax='export TERM=xterm-256color'

alias bt='colcon build --packages-select $(basename `pwd`)'
alias dk='docker update --restart=no $(docker ps -a -q) && docker kill $(docker ps -q)'
alias dr='docker system prune -a --volumes'
alias ul='ln -sf ~/git/programs/*.AppImage ~/.local/bin'
alias cds="cd $HOME/git/personal-setup"
alias sp="source .venv/bin/activate"
alias mrs1="cd $HOME/git/f4f/mrs_apptainer-ros1; ./wrapper.sh"
alias mrs2="cd $HOME/git/f4f/mrs_apptainer-ros2; ./wrapper.sh"

alias sb="source ~/.zshrc"
alias gs="git status"
alias :q="exit"
alias vim="nvim"
alias gitdf='git --git-dir=$DOTFILES --work-tree=$HOME'
